				a(href="https://www.facebook.com/revistadostribunais")
					i.simple-social-facebook
				a(href="https://twitter.com/revtribunais")
					i.simple-social-twitter

	.main-footer__area.main-footer__main
		.wrapper--block
			.main-footer__inner
				.main-footer__box
					.main-footer__logo
						span
							include ../../svg/small-logo-thomson.svg
						span
							include ../../svg/thomson-name-medium.svg
