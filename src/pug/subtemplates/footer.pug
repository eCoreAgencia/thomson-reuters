						a(href="https://www.linkedin.com/showcase/thomson-reuters-legal", target="_blank")
							i.simple-social-linkedin
						a(href="https://www.instagram.com/thomsonreutersbr/", target="_blank")
							i.simple-social-instagram
						a(href="https://www.youtube.com/thomsonreuters", target="_blank")
							i.simple-social-youtube
					.main-footer__title Nossas Áreas
