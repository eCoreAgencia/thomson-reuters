							li.main-footer__item
								a(href="/Institucional?#eventoss", rel="noopener noreferrer") Eventos
							li.main-footer__item
								a(href="/Institucional?#livreiros", rel="noopener noreferrer") Livreiros


				.main-footer__box
					.main-footer__duvidas
						h3.main-footer__title Atendimento
						ul.main-footer__list
							p.main-footer__text <strong>(11)4935-2387</strong>
							p.main-footer__text Horário de atendimento:
							p.main-footer__text De segunda a sexta
							p.main-footer__text das 9h às 18h
							a(href="mailto:atendimento@livrariart.com.br").main-footer__text atendimento@livrariart.com.br



				.main-footer__box--split
					.main-footer__title Pagamento
						ul.main-footer__list--flex
							li.main-footer__item
								include ../../svg/visa-icon.svg
							li.main-footer__item
								include ../../svg/master-icon.svg
							li.main-footer__item
								include ../../svg/dinners-icon.svg
							li.main-footer__item
								include ../../svg/amex-icon.svg
							li.main-footer__item
								include ../../svg/boleto-icon.svg
					.main-footer__title Segurança
						ul.main-footer__list--flex
							li.main-footer__item
								img(src="/arquivos/cloudflare-icon.png", alt="")/
							li.main-footer__item--split
								include ../../svg/ecore-icon.svg
								include ../../svg/vtex-icon.svg
