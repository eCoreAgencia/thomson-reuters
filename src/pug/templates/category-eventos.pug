extends ../layouts/default.pug

block vars
	- var pageTitle = 'Categoria'
	- var bodyClass = 'catalog category events'

block content
	section.breadCrumb
		.container
			+vtex-controller('<vtex.cmc:breadCrumb />')
				.bread-crumb
					ul
						li
							a(title='thompsonreuters', href='/') thompsonreuters
						li.last
							strong
								a(title='Black & Decker', href='') Lançamentos
	section.breadCrumbBottom
		.container
			+vtex-controller('<vtex.cmc:breadCrumb />')
				.bread-crumb
					ul
						li
							a(title='thompsonreuters', href='/') thompsonreuters
						li.last
							strong
								a(title='Black & Decker', href='') Lançamentos

	section.section__page.navCatalog-mobile#top
		.filterCategory--trigger
			p Filtrar Por
			i.simple-arrow-right
	.close &times;
	.minicart__overlay.minicart__overlay--filter
	section.section__page.navCatalog.container
		.navCatalog__numberResult
			p 23 RESULTADOS
	section.section__page.section__shelf.shelf
		.container.is-fluid
			+vtex-controller('<vtex.cmc:searchResult layout="65c15678-2bbe-72e0-3aa6-0aa635db2f86" itemCount="12"  columnCount="4" />')
				p.searchResultsTime
					span.resultado-busca-numero
						span.label Produtos encontrados:
						span.value 61
					span.label Resultado da Pesquisa por:
					strong.value
					span.resultado-busca-tempo
					span.label em
					span.value 7 ms
				.sub
					.resultado-busca-filtro
					fieldset.orderBy
						label Ordenar por:
						select#O(onchange="window.location.href= '/casa-e-jardim/black---decker?PS=12&' + 'O=' + this.options[this.selectedIndex].value")
							option(value='') Selecione
							option(value='OrderByPriceASC') Menor Preço
							option(value='OrderByPriceDESC') Maior Preço
							option(value='OrderByTopSaleDESC') Mais vendidos
							option(value='OrderByReviewRateDESC') Melhores avaliações
							option(value='OrderByNameASC') A - Z
							option(value='OrderByNameDESC') Z - A
							option(value='OrderByReleaseDateDESC') Data de lançamento
							option(value='OrderByBestDiscountDESC') Melhor Desconto
					fieldset.filterBy
